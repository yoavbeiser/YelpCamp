<% include ../partials/customheader %>
        <div class="container">
            <div class="center-me">
                <div class="center edit-me">
                    <h1>Edit Comment</h1>
            
                    <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <i class="fa fa-pencil-square-o fa-icon"></i>
                            <textarea class="form-control allow-icon" type="textarea" name="comment" required><%= comment.text %></textarea>
                        </div>
                        <div class="form-group">
                           <button class="btn btn-lg" type="submit">Submit!</button> 
                        </div>
                    </form>
                    
                    <a href="/campgrounds/<%= campground._id %>">Go back</a>
                </div>
            </div>
        </div>
